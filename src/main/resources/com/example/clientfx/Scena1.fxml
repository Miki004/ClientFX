<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.clientfx.Controllers.Scena1Controller">
   <VBox layoutX="10.0" layoutY="7.0" spacing="10" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="7.0">
      <HBox spacing="10" />
      <HBox spacing="10" />
      <Label text="Insert a table's name:" />
      <TextField fx:id="tableSpace" prefHeight="25.0" prefWidth="327.0" promptText="Inserisci il nome di una tabella esistente" />
      <Button fx:id="myButton" mnemonicParsing="false" onAction="#riceviTabella" text="Send" />
      <Label text="IP:" />
      <TextField fx:id="ipField" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="25.0" prefWidth="161.0" />
      <Label layoutX="10.0" layoutY="93.0" text="Port" />
      <TextField fx:id="portField" alignment="CENTER" layoutX="10.0" layoutY="93.0" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="25.0" prefWidth="160.0" />
      <Label layoutX="10.0" layoutY="30.0" text="Choose an Option:" />
      <RadioButton fx:id="loadFromFileButton" text="Load Dendrogram from File" />
      <RadioButton fx:id="mineFromDbButton" text="Mine Dendrogram from Database" />

      <!-- Execute Button -->
      <Button onAction="#executeSelectedOption" text="Execute" />

      <!-- Output Area -->
      <TextArea fx:id="outputArea" prefHeight="200" wrapText="true" />
   </VBox>
</AnchorPane>
